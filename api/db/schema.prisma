model User {
  id                  String    @id @unique @default(uuid())
  name                String?
  email               String    @unique
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @default(now())
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}
